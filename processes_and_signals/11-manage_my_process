#!/usr/bin/env bash
# 11-manage_my_process - Manage the manage_my_process script

if [[ "$#" == "1" ]]; then
    if [[ "$1" == "start" ]]; then
        if test -f "/var/run/my_process.pid"; then
            echo "manage_my_process is already running"
        else
            ./manage_my_process &
            echo "$!" > /var/run/my_process.pid
            if [[ -f /var/run/my_process.pid ]]; then
                echo "manage_my_process started"
            else
                echo "Failed to start manage_my_process"
            fi
        fi

    elif [[ "$1" == "stop" ]]; then
        if test -f "/var/run/my_process.pid"; then
            kill "$(cat /var/run/my_process.pid)" 2>/dev/null
            if [[ $? -eq 0 ]]; then
                rm /var/run/my_process.pid
                if [[ ! -f /var/run/my_process.pid ]]; then
                    echo "manage_my_process stopped"
                else
                    echo "Failed to delete /var/run/my_process.pid"
                fi
            else
                echo "Failed to stop manage_my_process"
            fi
        else
            echo "manage_my_process is not running"
        fi

    elif [[ "$1" == "restart" ]]; then
        # Stop program
        if test -f "/var/run/my_process.pid"; then
            kill "$(cat /var/run/my_process.pid)" 2>/dev/null
            rm /var/run/my_process.pid
        fi

        # Start program
        ./manage_my_process &
        echo "$!" > /var/run/my_process.pid
        echo "manage_my_process restarted"

    else
        echo "Usage: manage_my_process {start|stop|restart}"
    fi
else
    echo "Usage: manage_my_process {start|stop|restart}"
fi

