#!/usr/bin/env bash
# 11-manage_my_process - Manages the manage_my_process script.

PID_FILE="/var/run/my_process.pid"
PROCESS_NAME="manage_my_process"

start() {
    if [ -f "$PID_FILE" ]; then
        echo "$PROCESS_NAME is already running."
        exit 1
    fi

    # Start the manage_my_process script in the background
    /path/to/manage_my_process &  # Change this to the actual path of your manage_my_process script
    echo $! > "$PID_FILE"  # Store the PID of the process
    echo "$PROCESS_NAME started"
}

stop() {
    if [ -f "$PID_FILE" ]; then
        kill "$(cat "$PID_FILE")" && rm -f "$PID_FILE"
        echo "$PROCESS_NAME stopped"
    else
        echo "$PROCESS_NAME is not running."
    fi
}

restart() {
    stop
    start
    echo "$PROCESS_NAME restarted"
}

usage() {
    echo "Usage: $0 {start|stop|restart}"
}

# Main logic
case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        usage
        exit 1
        ;;
esac

