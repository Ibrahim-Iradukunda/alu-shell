#!/usr/bin/env bash
# This script stops the 4-to_infinity_and_beyond process

# Use pgrep to find PIDs of the 4-to_infinity_and_beyond process
readarray -t prog_pid < <(pgrep -la "4-to_infinity_and_beyond")

# Check if any PIDs were found
if [[ ${#prog_pid[@]} -eq 0 ]]; then
    exit 0  # Exit quietly if no process found
fi

# Iterate over the PIDs and kill each one
for pid in "${prog_pid[@]}"; do
    kill -s SIGTERM "$pid"  # Send the SIGTERM signal
done

