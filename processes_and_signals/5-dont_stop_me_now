#!/usr/bin/env bash
# This script stops the 4-to_infinity_and_beyond process

# Find the PID of the 4-to_infinity_and_beyond process
pid=$(pgrep -f "4-to_infinity_and_beyond")

# Check if the process ID was found
if [[ -z "$pid" ]]; then
    echo "No running instance of 4-to_infinity_and_beyond found."
    exit 1  # Exit with error if no process is found
fi

# Use kill to stop the process
kill "$pid"

# Optional: Confirm if the process has been terminated
if ! kill -0 "$pid" 2>/dev/null; then
    echo "4-to_infinity_and_beyond process has been terminated."
else
    echo "Failed to terminate 4-to_infinity_and_beyond process."
fi

