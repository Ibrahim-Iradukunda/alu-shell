#!/usr/bin/env bash
# This script displays the PID and process name of processes whose name contains the word 'bash'

for pid in /proc/[0-9]*; do
    # Check if the process name contains 'bash'
    if [[ -f "$pid/comm" ]] && [[ "$(cat "$pid/comm")" == *bash* ]]; then
        # Extract the process name
        pname=$(cat "$pid/comm")
        # Extract the PID from the directory name
        pid_num=$(basename "$pid")
        # Display the PID and process name
        echo "PID: $pid_num, Process Name: $pname"
    fi
done

