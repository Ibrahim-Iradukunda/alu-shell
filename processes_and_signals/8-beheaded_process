#!/usr/bin/env bash
# This script kills the 7-highlander process

# Find the PID of the 7-highlander process
pid=$(pgrep -x "7-highlander")

# Check if the process ID was found
if [[ -z "$pid" ]]; then
    echo "No running instance of 7-highlander found."
    exit 1  # Exit with error if no process is found
fi

# Kill the 7-highlander process
kill "$pid"

# Optional: Confirm if the process has been terminated
if ! kill -0 "$pid" 2>/dev/null; then
    echo "7-highlander process has been terminated."
else
    echo "Failed to terminate 7-highlander process."
fi

