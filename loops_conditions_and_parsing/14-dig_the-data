#!/bin/bash

# Define the log file location (update this path as necessary)
LOG_FILE="/path/to/apache/logfile.log"

# Process the log file and display occurrences of each IP and HTTP status code
awk '{print $1, $9}' "$LOG_FILE" | 
    awk '{
        count[$1 " " $2]++
    } END {
        for (entry in count) {
            print count[entry], entry
        }
    }' | 
    sort -nr | 
    awk '{print $1, $2, $3}'

