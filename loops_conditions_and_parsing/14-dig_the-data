#!/usr/bin/env bash
# This script parses Apache access logs to extract visitor IPs and HTTP status codes, groups them, and displays occurrences.

# Check if the log file exists and is not empty
if [ ! -s apache-access.log ]; then
    exit 0  # Exit with no output if the log file is empty or does not exist
fi

# Use awk to extract the IP and HTTP status code, count occurrences, and sort them
awk '{print $1, $9}' apache-access.log | \
    awk '{count[$1,$2]++} END {for (ip_http in count) {split(ip_http, a, SUBSEP); print count[ip_http], a[1], a[2]}}' | \
    sort -nr | \
    column -t
