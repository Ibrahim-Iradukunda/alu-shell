#!/usr/bin/env bash
# This script displays numbers from 1 to 20 with specific messages for certain numbers

count=1  # Initialize a counter

while [ $count -le 20 ]  # Continue until the counter is greater than 20
do
    case $count in
        4)
            echo "$count - bad luck from China"  # Display 4 and the message
            ;;
        9)
            echo "$count - bad luck from Japan"  # Display 9 and the message
            ;;
        17)
            echo "$count - bad luck from Italy"  # Display 17 and the message
            ;;
        *)
            echo "$count"  # Display the number for all other iterations
            ;;
    esac
    ((count++))  # Increment the counter
done
