#!/usr/bin/env bash
# This script loops from 1 to 10 and displays messages based on the iteration

count=1  # Initialize a counter

while [ $count -le 10 ]  # Continue until the counter is greater than 10
do
    if [ $count -eq 4 ]; then  # Check if the counter is 4
        echo "bad luck"  # Display 'bad luck'
    elif [ $count -eq 8 ]; then  # Check if the counter is 8
        echo "good luck"  # Display 'good luck'
    else
        echo "Best School"  # Display 'Best School' for all other iterations
    fi
    ((count++))  # Increment the counter
done
